<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/registertitle"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:gravity="center|center_horizontal"
                android:text="アカウント登録"
                android:textColor="#C81313"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/authname"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="名前"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/autherrorname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#F40606"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/authemail"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:ems="10"
                android:hint="メールアドレス"
                android:inputType="textEmailAddress"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/autherroremail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|center_vertical"
                android:textColor="#F40606"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/authpass"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:ems="10"
                android:hint="パスワード(英字8文字以上)"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/autherrorpass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#F40606"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="326dp">

                <Button
                    android:id="@+id/register"
                    android:layout_width="144dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="アカウント登録"
                    android:textColorHighlight="#FFFFFF"
                    app:backgroundTint="#03A9F4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.261" />

                <Button
                    android:id="@+id/tologin"
                    android:layout_width="314dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="アカウントをお持ちの方方はこちら"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.729" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>